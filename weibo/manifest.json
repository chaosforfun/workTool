{
	"manifest_version": 2,
	"name": "微博广告、推广过滤",
	"description": "去除微博中广告，好友推荐等微博，仅适用于微博6.0",
	"version": "1.0",
	"permissions": [
		"notifications"
	],
	"browser_action": {
		"default_title": "去微博广告",
		"default_icon": "icon.png"
	},
	"content_scripts" : [{
		"matches": ["http://weibo.com/*", "https://weibo.com/*"],
		"css": ["weibo.css"],
		"js": ["weibo.js"]	
	}]
}